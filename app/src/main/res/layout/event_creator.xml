<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="20dp">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="3dp"
        >
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Event name"
            android:layout_marginTop="10dp"
            android:id="@+id/eventEdit"/>
        <AutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:layout_below="@id/eventEdit"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:id="@+id/locationEdit">
        </AutoCompleteTextView>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Start"
            android:editable="false"
            android:layout_marginTop="10dp"
            android:layout_below="@id/locationEdit"
            android:id="@+id/startDateBtn"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/startDateBtn"
            android:editable="false"
            android:id="@+id/endDateBtn"
            android:layout_marginTop="10dp"
            android:hint="End"/>
        <MultiAutoCompleteTextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Guests"
            android:layout_marginTop="10dp"
            android:layout_below="@id/endDateBtn"
            android:id="@+id/guests"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:layout_marginTop="10dp"
            android:id="@+id/eventCreatorDescription"
            android:layout_below="@id/guests"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/eventCreatorDescription"
            android:id="@+id/linear_layout_event">
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/okayButton"
                android:text="Okay"/>
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/cancelButton"
                android:text="Cancel"/>
        </LinearLayout>



    </RelativeLayout>
</ScrollView>