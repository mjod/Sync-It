<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="5dp"
    android:layout_marginTop="2dp"
    card_view:cardBackgroundColor="@null"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/draw_background"
        android:background="@drawable/buttonshape"
        android:textColor="#000000"
        android:textSize="20sp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/cardview_image"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/cardview_image"
            android:layout_alignTop="@id/cardview_image"
            android:layout_alignBottom="@id/cardview_image"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:id="@+id/cardview_text"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>
